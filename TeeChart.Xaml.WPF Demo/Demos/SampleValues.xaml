<UserControl x:Class="XamlWPFDemo.Demos.SampleValues"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:teechart="clr-namespace:TeeChart.Xaml.WPF;assembly=TeeChart.Xaml.WPF"
             xmlns:series="clr-namespace:TeeChart.Xaml.WPF.Series;assembly=TeeChart.Xaml.WPF"
             mc:Ignorable="d">
  <teechart:TChart>
    <!-- That's the blue bar. Auto will fill the default amount of Sample Values for a series. -->
    <series:Bar SampleValues="Auto" />

    <!-- That's the orange bar. We can also tell the series to use a specific amount of Sample Values. -->
    <series:Bar SampleValues="20" />
  </teechart:TChart>
</UserControl>